<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="colorControlNormal">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomDialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_description_text_view</item>
    </style>

    <style name="title_text_view" parent="text_view">
        <item name="android:textSize">@dimen/font_size_normal_16</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="description_text_view" parent="text_view">
        <item name="android:textSize">@dimen/font_size_normal_14</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/font_size_mini_4</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="FotonBtn" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">62dp</item>
    </style>

    <style name="CustomButton">
        <item name="android:minHeight">58dp</item>
    </style>

    <style name="dialog_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dialog_background</item>
    </style>
</resources>
