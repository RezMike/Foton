<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small_16">

        <ImageButton
            android:id="@+id/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_custom_arrow_left_black"/>

        <TextView
            style="@style/rubric_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/add_info_step_three_title"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/right_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_custom_arrow_right_black"/>

    </RelativeLayout>

    <TextView
        style="@style/rubric_text_view"
        android:layout_marginBottom="@dimen/font_size_normal_16"
        android:text="@string/add_info_choose_album"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_albums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>