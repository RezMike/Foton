<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small_16">

            <TextView
                android:id="@+id/title_register"
                style="@style/header_text_view"
                android:text="@string/register_dialog_title"/>

            <TextView
                style="@style/hint_edit_text"
                android:layout_marginTop="@dimen/spacing_normal_24"
                android:text="@string/register_dialog_login"/>

            <EditText
                android:id="@+id/login_et"
                style="@style/edit_text_borders"
                android:inputType="text"
                android:lines="1"/>

            <TextView
                style="@style/hint_edit_text"
                android:text="@string/register_dialog_email"/>

            <EditText
                android:id="@+id/email_et"
                style="@style/edit_text_borders"
                android:inputType="textEmailAddress"
                android:lines="1"/>

            <TextView
                style="@style/hint_edit_text"
                android:text="@string/register_dialog_name"/>

            <EditText
                android:id="@+id/name_et"
                style="@style/edit_text_borders"
                android:inputType="textPersonName"
                android:lines="1"/>

            <TextView
                style="@style/hint_edit_text"
                android:text="@string/register_dialog_password"/>

            <EditText
                android:id="@+id/password_et"
                style="@style/edit_text_borders"
                android:inputType="textPassword"
                android:lines="1"/>

            <include layout="@layout/layout_dialog_footer"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>