<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small_16">

            <TextView
                style="@style/title_text_view"
                android:text="@string/edit_profile_dialog_header"/>

            <TextView
                style="@style/hint_edit_text"
                android:layout_marginTop="@dimen/font_size_normal_24"
                android:text="@string/edit_profile_dialog_name"/>

            <EditText
                android:id="@+id/name_et"
                style="@style/edit_text_borders"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                tools:text="Михаил"/>

            <TextView
                style="@style/hint_edit_text"
                android:text="@string/edit_profile_dialog_login"/>

            <EditText
                android:id="@+id/login_et"
                style="@style/edit_text_borders"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                tools:text="mihail"/>

            <include layout="@layout/layout_dialog_footer"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>