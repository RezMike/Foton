<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/image"
        layout="@layout/ratio_image_1_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image"
        android:background="@drawable/shadow_gradient"
        android:rotation="180"/>

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/spacing_very_small_8"
        android:layout_marginLeft="@dimen/spacing_small_16"
        android:layout_marginTop="@dimen/spacing_small_16"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal_24"
        tools:text="Избранное"/>

    <TextView
        android:id="@+id/photocard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_name"
        android:layout_marginBottom="@dimen/spacing_very_small_8"
        android:layout_marginLeft="@dimen/spacing_small_16"
        android:text="@string/item_info_name_album"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal_16"/>

    <TextView
        android:id="@+id/count_photo_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photocard"
        android:layout_marginLeft="@dimen/spacing_small_16"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal_20"
        android:textStyle="bold"
        tools:text="4"/>

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="@dimen/check_mark_image"
        android:layout_height="@dimen/check_mark_image"
        app:srcCompat="@drawable/ic_done_white_24dp"
        android:layout_marginRight="@dimen/spacing_small_16"
        android:layout_alignParentRight="true"/>
</RelativeLayout>